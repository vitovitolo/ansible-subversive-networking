modules:
  http_2xx:
    prober: http
    timeout: 5s
    http:
      preferred_ip_protocol: ip4
  https_2xx:
    prober: http
    timeout: 5s
    http:
      preferred_ip_protocol: ip4
      fail_if_not_ssl: true
  tcp_connect:
    prober: tcp
    timeout: 5s
    tcp:
      preferred_ip_protocol: ip4
  icmp_probe:
    prober: icmp
    timeout: 5s
    icmp:
      preferred_ip_protocol: ip4
  dns_google:
    prober: dns
    timeout: 5s
    dns:
      query_name: google.es
      preferred_ip_protocol: ip4
      validate_answer_rrs:
        fail_if_matches_regexp: [test]
  dns_cabify:
    prober: dns
    timeout: 5s
    dns:
      query_name: cabify.es
      preferred_ip_protocol: ip4
      transport_protocol: tcp
      validate_answer_rrs:
        fail_if_matches_regexp: [test]
